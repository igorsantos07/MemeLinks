-# -*- encoding : utf-8 -*-
-img_url = url(:meme, :image, :filename => @meme.filename)

-content_for :subtitle do
  ='Meme Card - '+@meme.name

-partial 'layouts/fb_meta', :locals => {:image => 'http://'+request.host+img_url, :title => @meme.name+' [MemeLinks]'}

.ad-leaderboard
  =partial 'layouts/ads/adsense_sup_card'
-#  =partial 'layouts/ads/adbrite_sup_card'

#meme
  .heading
    %h3=@meme.name
  .main-box
    =image_tag img_url+'?y'
    .social
      .fb-like{:data => {:href => request.url, :send => :true, :layout => :box_count, :width => 100, 'show-faces' => :true, :font => :arial}}

  -if @meme.keywords.length > 0
    #keywords
      %h4='Tag'+(@meme.keywords.length > 1? 's' : '')
      %ul
        -@meme.keywords.each do |word|
          %li
            %a{:href => url(:meme, :search, :q => word)}=word
