-# -*- encoding : utf-8 -*-
.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:memes, :index)
      =partial 'memes/pending_tab', :locals => {:active => active[:pending]}
      %li.active=link_to pat(:new), url(:memes, :new)
  .content
    %h2.title
      =pat(:new)
      =mt(:meme)
    .inner
      -form_for :meme, url(:memes, :create), :class => :form, :enctype => "multipart/form-data" do |f|
        =partial "memes/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
